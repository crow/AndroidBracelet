<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".BraceletMainActivityFragment">

    <SeekBar
        android:id="@+id/redBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/redLabel"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/redLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/redBar"
        android:layout_alignParentTop="true"
        android:layout_marginTop="75dp"
        android:text="@string/red" />

    <Button
        android:id="@+id/connectBraceletButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/connectBracelet"
        android:layout_marginTop="51dp"
        android:layout_below="@+id/brightnessBar"
        android:layout_alignEnd="@+id/connectMantraButton"
        android:layout_alignParentStart="true"/>

    <Button
        android:id="@+id/connectMantraButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/connectMantra"
        android:layout_below="@+id/connectBraceletButton"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"/>


    <TextView
        android:id="@+id/greenLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/redBar"
        android:layout_below="@+id/redBar"
        android:layout_marginTop="20dp"
        android:text="@string/green" />

    <SeekBar
        android:id="@+id/greenBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/greenLabel"
        android:layout_alignParentStart="true" />

    <SeekBar
        android:id="@+id/blueBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/blueLabel"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/blueLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/greenBar"
        android:layout_below="@+id/greenBar"
        android:layout_marginTop="20dp"
        android:text="@string/blue" />

    <SeekBar
        android:id="@+id/brightnessBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/brightnessLabel"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/brightnessLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/brightness"
        android:layout_below="@+id/blueBar"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"/>

</RelativeLayout>

